<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guga.avaliamobile.Activitys.AvaliarActivity">
    <!--android:scrollbars=""-->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Avaliação do Aparelho"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:text="O Aparelho Liga?"
        android:textSize="14sp" />

    <RadioGroup
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2">

        <RadioButton
            android:id="@+id/rbSim"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="SIM"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbNao"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@+id/rbSim"
            android:layout_toEndOf="@+id/textView2"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Não"
            android:textColor="#000000"
            android:textSize="12sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="Como Esta a Tela do Aparelho?"
        android:textSize="14sp" />

    <RadioGroup
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7">

        <RadioButton
                    android:id="@+id/rbPer"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Perfeita, sem avarias"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RadioButton
                android:id="@+id/rbRisc"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioButton3"
            android:layout_toEndOf="@+id/textView7"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Riscos Leves"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbTrinc"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioButton4"
            android:layout_toEndOf="@+id/textView7"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Trincada, Quebrada"
            android:textColor="#000000"
            android:textSize="12sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="23dp"
        android:text="Como Esta a Carcaça do Aparelho?"
        android:textSize="14sp" />


    <RadioGroup
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4">

        <RadioButton
            android:id="@+id/rbPerf"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Perfeito, sem riscos"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/rbAmass"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rbPerf"
            android:layout_toEndOf="@+id/textView4"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Amassados, riscos, descascados, manchas"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbDesga"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="right|center_vertical"
            android:text="Desgastes excessivos ou Carcaça Trincada"
            android:textColor="#000000"
            android:textSize="12sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btFinalizaAvaliacao"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Finalizar Avaliaçao"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
