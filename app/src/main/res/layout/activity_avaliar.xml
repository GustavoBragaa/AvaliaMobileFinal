<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guga.avaliamobile.AvaliarActivity">
    <!--android:scrollbars=""-->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Avaliação do Aparelho"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:text="O Aparelho Liga?"
        android:textSize="12sp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:text="SIM."
        android:textSize="12sp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:text="NÂO."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:text="Como Esta a Tela do Aparelho?"
        android:textSize="12sp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:text="Perfeita, sem avarias."
        android:textSize="12sp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch3"
        android:layout_toEndOf="@+id/textView7"
        android:text="Riscos Leves."
        android:textSize="12sp" />

    <Switch
        android:id="@+id/switch9"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch4"
        android:layout_toEndOf="@+id/textView7"
        android:text="Trincada, Quebrada."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Como Esta a Carcaça do Aparelho?"
        android:textSize="12sp"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/switch7" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Perfeito,sem riscos."
        android:textSize="12sp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Switch
        android:id="@+id/switch6"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Amassados, riscos, descascados, manchas."
        android:textSize="12sp"
        android:layout_below="@+id/switch5"
        android:layout_toEndOf="@+id/textView4" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Desgastes excessivos ou Carcaça Trincada."
        android:textSize="12sp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView4" />


</RelativeLayout>
